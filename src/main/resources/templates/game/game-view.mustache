{{>layout/header}}

<h1>내전 기록 조회</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/" role="button" class="btn btn-primary">홈 버튼</a>
            <button type="button" class="btn btn-primary" id="btn-log-delete">최근전적 삭제</button>
        </div>
    </div>
    <br>
    <!--    목록 출력-->
    <table class="table table-horizontal table-bordered">
        <thead class = "thead-string">
        <tr>
            <th>게임날짜</th>
            <th>시즌</th>
            <th>라운드</th>
            <th>총결과</th>
            <th>1세트 결과</th>
            <th>2세트 결과</th>
            <th>3세트 결과</th>
            <th>작성자</th>
        </tr>
        </thead>
        <tbody id = "tbody">
        {{#games}}
            <tr>
                <td>{{play_date}}</td>
                <td>{{season}}</td>
<!--                <td>{{round}}</td>-->
                <td><a href="/game/view/detail?round={{round}}&play_date={{play_date}}">{{round}}</a></td>
                <td style="font-weight: bold">{{result}}</td>
                <td>{{set1}}</td>
                <td>{{set2}}</td>
                <td>{{set3}}</td>
                <td>{{user_name}}</td>
            </tr>
        {{/games}}
        </tbody>
    </table>
</div>

{{>layout/footer}}